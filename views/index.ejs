<!DOCTYPE html>
<html>
<head>
  <title>Rated Gold!</title>
  <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script srt="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.1.0/masonry.pkgd.min.js"></script>
  <script src="/javascripts/angularApp.js"></script>
  <style> .glyphicon-thumbs-up { cursor:pointer } </style>
</head>
<body ng-app="ratedGold" ng-controller="MainCtrl">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      This should appear above the main content
      <ui-view></ui-view>
      Domo Arigato Mr Roboto
    </div>
  </div>


  <script type="text/ng-template" id="/home.html">

    <div class="page-header">
      <h1>Rated Gold!</h1>
    </div>

    <div ng-repeat="provider in providers | orderBy:'-upvotes'">
      <span class="glyphicon glyphicon-thumbs-up"
        ng-click="incrementUpvotes(provider)"></span>
      {{provider.upvotes}}
      <span style="font-size:20px; margin-left:10px;">
        <a ng-show="provider.link" href="{{provider.link}}">
          {{provider.name}}
        </a>
        <span ng-hide="provider.link">
          {{provider.name}}
        </span>
      </span>
      <span>
        <a href="#/providers/{{provider._id}}">Reviews</a>
      </span>
    </div>

    <form ng-submit="addProvider()"
      style="margin-top:30px;">
      <h3>Add a new provider</h3>

      <div class="form-group">
        <input type="text"
          class="form-control"
          placeholder="Name of Provider"
          ng-model="name"></input>
      </div>
      <div class="form-group">
        <input type="text"
        class="form-control"
        placeholder="Link to homepage"
        ng-model="link"></input>
      </div>
      <div class="form-group">
        <input type="text"
        class="form-control"
        placeholder="A brief description of the provider"
        ng-model="description"></input>
      </div>
      <div class="form-group">
        <input type="text"
        class="form-control"
        placeholder="category of provider"
        ng-model="category"></input>
      </div>
      <div class="form-group">
        <input type="text"
        class="form-control"
        placeholder="enter a URL for the provider's image"
        ng-model="imageUrl"></input>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

  </script>

  <script type="text/ng-template" id="/providers.html">

    <div class="page-header">
      <h3>
        <a ng-show="provider.link" href="{{provider.link}}">
          {{provider.name}}
        </a>
        <span ng-hide="provider.link">
          {{provider.name}}
        </span>
      </h3>
    </div>

    <div ng-repeat="review in provider.reviews | orderBy:'-upvotes'">
      <span class="glyphicon glyphicon-thumbs-up"
        ng-click="incrementUpvotes(review)"></span>
      {{review.upvotes}} - by {{review.author}}
      <span style="font-size:20px; margin-left:10px;">
        {{review.body}}
      </span>
    </div>

    <form ng-submit="addReview()" style="margin-top:30px;">
      <h3>Add a new review</h3>

      <div class="form-group">
        <input type="text"
        class="form-control"
        placeholder="Review"
        ng-model="body"></input>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

  </script>

</body>
</html>
